<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".splash.ContactActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:background="@color/colorPrimary"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/COntactBackIMG"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|start"
            android:text="Contact Us"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

    </LinearLayout>



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:layout_marginStart="@dimen/_15sdp"
        android:text="Write Us"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="#000000"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:layout_marginStart="@dimen/_15sdp"
        android:text="Contact Us"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Have a question or suggestion? We're here to help!"
        android:textColor="#C6000000"
        android:textSize="@dimen/_10sdp" />



    <EditText
        android:id="@+id/edtNameCont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/orenageborder"
        android:hint="Enter Name"
        android:lineSpacingExtra="@dimen/_1sdp"
        android:padding="@dimen/_9sdp"
        android:paddingStart="@dimen/_15sdp"
        android:textColor="#000000"
        android:textColorHint="#B7B7B7"
        android:textSize="@dimen/_12ssp" />

    <EditText
        android:id="@+id/edtMessageCont"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/orenageborder"
        android:gravity="top"
        android:hint="Typing Something here...."
        android:lineSpacingExtra="@dimen/_1sdp"
        android:padding="@dimen/_15sdp"
        android:textColor="#000000"
        android:textColorHint="#B7B7B7"
        android:textSize="@dimen/_12ssp" />


    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_marginVertical="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:background="@drawable/btn_gradiant"
        android:layout_marginHorizontal="@dimen/_70sdp"
        android:text="Submit"
        android:textColor="@color/black"
        android:textAllCaps="false"
        android:textSize="@dimen/_15ssp" />

</LinearLayout>
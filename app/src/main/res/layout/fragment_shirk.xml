<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".dateconverter.abcd.Fragments.ShirkFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">




            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"

                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Definition"
                        android:textColor="#9BCF53"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TS01"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:letterSpacing="0.05"
                        android:padding="10dp"
                        android:text="Shirk is to associate someone other than Allah in those aspects which are unique to Allah and His exclusive right. Shirk is to worship created beings like Allah is worshipped, to venerate created beings like Allah must be venerated, and to assign a portion of His divinity to someone else."
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/IS01"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="end"
                        android:src="@drawable/share"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"

                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Verses"
                        android:textColor="#9BCF53"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TS02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:letterSpacing="0.05"
                        android:padding="10dp"
                        android:text="Al-maida 05:72:\n\nThey are certainly faithless who say. 'Allah is the Messiah, son of Mary. But the Messiah had said, 'O Children of Israel! Worship Allah, my Lord and your Lord. Indeed whoever ascribes partners to Allah, Allah shall forbid him [entry into] paradise, and his refuge shall be the Fire, and the wrongdoers will not have any helpers.\n\nAz-Zumar 39:65:\n\nIt has already been revealed to you [Prophet] and to those before you: 'If you ascribe any partner to God, all your work will come to nothing: you will be one if the losers."
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/IS02"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="end"
                        android:src="@drawable/share"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"

                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Ahadees"
                        android:textColor="#9BCF53"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TS03"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:letterSpacing="0.05"
                        android:padding="10dp"
                        android:text="Al-Mu'jam al-Kabir 11457:\n\nIbn Abbas reported: The Messenger of Allah, peace and blessings be upon him, said, Allah Almighty said: Whoever knows that I have power to forgive sins, I will forgive him and I will not mind, as long as he does not associate any partners with mo\n\nSahih Muslim 2085:\n\nAbu Huraira reported Allah's Messenger () as stating that Allah the Most High anc Exalted said: I am the One, One Who does not stand in need of a partner. If anyone does anything in which he associates anyone else with Me, I shall abandon him with one whom he associates with Allah."
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/IS03"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="end"
                        android:src="@drawable/share"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>





            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"

                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Types"
                        android:textColor="#9BCF53"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TS04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:letterSpacing="0.05"
                        android:padding="10dp"
                        android:text="Greater Shirk (Shirk Akbar):\n\nGreater Shirk is associating others with Allah in those aspects which are unique to Allah in his person taking a rival or associate unto Allah and making it an equal to Allah. Shirk in Allah Being the Lord\n\nLesser Shirk (Shirk Asghar):\n\nLesser Shirk is what has been specifically called shirk in the Quran and Sunnah, but does not roach the level of greater shirk Also, lessor shirk is said to lead to greater shirk. Some scholars have said lesser shirk is so vast that it is difficult to define it precisely.\n\nRiyaa (Showing-off):\n\nThe Messenger of Allah said: The thing that I fear most for you is lesser shirk Thay said: O Messenger of Allah, what is lessor shirk? He said: Riyaa (showing off), for Allah will say on the Day when people are recompensed for their actions: Go to those for whom you were showing off with your deeds in the world, and see what reward you find with them. (Ahmad) Riyax is to perform worship in order to be seen and praised by people. Riyaa renders a deed void; the person carns sin instead of roward from Allah, and it exposes him to punishment."
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/IS04"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="end"
                        android:src="@drawable/share"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>






            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"

                app:cardElevation="10dp"
                app:cardMaxElevation="12dp"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="Differences"
                        android:textColor="#9BCF53"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TS05"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:letterSpacing="0.05"
                        android:padding="10dp"
                        android:text="The greater shirk expels a person from the fold of islam, whereas the lesser shirk does not tako one out of Islam, but reduces one belief in Allah\n\nA person who dies committing greater shirk will be in Hellfire for eternity; this is no the case with one committing lesser shirk.\n\nGreater shirk wipes out and annuls all good deeds, whereas lesser shirk only ruins the deeds it motivates or is a part of.\n\nGreater shirk is not forgiven by Allah excop through sincore ropentance done before death: whereas it is up to Allah to punish or forgive lassor shirk."
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/IS05"
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="end"
                        android:src="@drawable/share"/>


                </LinearLayout>

            </androidx.cardview.widget.CardView>



















        </LinearLayout>
    </ScrollView>


</FrameLayout>
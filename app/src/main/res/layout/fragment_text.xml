<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".abcd.TextFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            >

            <EditText
                android:id="@+id/EDItxt1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="message"
                android:backgroundTint="@color/white"
                android:paddingStart="@dimen/_10sdp" />

            <ImageView
                android:id="@+id/IMgTxt1"
                android:layout_width="40dp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:padding="@dimen/_4sdp"
                android:layout_height="match_parent"
                android:src="@drawable/teu" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:background="@color/black"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bgallahnamelist"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:gravity="start|center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Allahumma salli ala Muhammad wa ala ali Muhammad"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bgallahnamelist"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:gravity="start|center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Eid Al-Adha Mubarak"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bgallahnamelist"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:gravity="start|center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Bismillahirrahmanirrahim"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bgallahnamelist"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:gravity="start|center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Subhanallah"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bgallahnamelist"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:gravity="start|center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Alhamdulillah"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bgallahnamelist"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:gravity="start|center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="La llahe Illallah Muhammeden Rasulullah"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bgallahnamelist"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:gravity="start|center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Jummah Mubarak"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginHorizontal="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bgallahnamelist"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:gravity="start|center"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:paddingHorizontal="@dimen/_12sdp"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="Eid Mubarak"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</FrameLayout>